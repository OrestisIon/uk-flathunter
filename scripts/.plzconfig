[please]
version = >=17.0.0

[parse]
preloadsubincludes = ///python//build_defs:python

[Plugin "python"]
Target = //plugins:python
ModuleDir = third_party.python
DefaultInterpreter = python3

[build]
path = /usr/local/bin:/usr/bin:/bin

[buildconfig]
default-docker-repo = flathunter

[python]
# Use pip for dependency management
PipTool = pip3
# Module directory for third-party packages
moduledir = third_party.python

[alias "test"]
desc = Run all tests
cmd = plz test //...

[alias "build"]
desc = Build all targets
cmd = plz build //...

[alias "coverage"]
desc = Run tests with coverage
cmd = plz test --include_all_transitive_dependencies --coverage //...
