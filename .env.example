# Flathunter Environment Variables
# Copy this file to .env and fill in your sensitive credentials
# The .env file is gitignored and will not be committed

# Telegram Bot Configuration (if using Telegram notifier)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_RECEIVER_IDS=123456789,987654321  # Comma-separated list of user IDs

# Slack Configuration (if using Slack notifier)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Mattermost Configuration (if using Mattermost notifier)
# MATTERMOST_WEBHOOK_URL=https://your-mattermost.com/hooks/YOUR_WEBHOOK_ID

# Captcha Service API Keys (if using ImmoScout24 or other captcha-protected sites)
# 2CAPTCHA_KEY=your_2captcha_api_key
# IMAGETYPERZ_TOKEN=your_imagetyperz_token
# CAPMONSTER_KEY=your_capmonster_api_key

# Google Maps API (for distance calculations)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# LLM Integration (for AI-powered property scoring)
# LLM_API_KEY=your_anthropic_api_key
# LLM_MODEL=claude-haiku-4.5
# LLM_ENABLED=true

# ImmoScout24 Cookie (optional, helps with bot detection)
# IMMOSCOUT_COOKIE=your_cookie_value

# Optional: Override config.yaml settings
# HEADLESS_BROWSER=true
# VERBOSE_LOG=true
# LOOP_PERIOD_SECONDS=600
# DATABASE_LOCATION=./data
